<?xml version="1.0" standalone="no"?>
<!DOCTYPE swatml SYSTEM "http://swat.silverorange.com/swatml1.dtd">
<swatml>
	<widget class="SwatMessageDisplay" id="message_display" />
	<widget class="SwatFrame" id="edit_frame">
		<property name="title" translatable="yes">Edit Advertising Preferences</property>
		<widget class="SwatForm" id="edit_form">
			<widget class="SwatFormField">
				<property name="title" translatable="yes">Only display advertising to visitors who have arrived via another website</property>
				<widget class="SwatCheckbox" id="blorg_ad_referers_only" />
			</widget>
			<widget class="SwatFieldset">
				<property name="title" translatable="yes">Advertising Locations</property>
				<widget class="AdminNote">
					<property name="content" translatable="yes"><![CDATA[
					<p>For each location, enter the desired markup for embedding advertising. Leave locations for which no advertising is desired blank.</p>
					<p style="margin-bottom: 0;">For example, using Google Adsense, insert the markup generated by following the <a href="https://www.google.com/adsense/support/bin/answer.py?answer=21592&topic=134&sourceid=aso&subid=us-en-et-hp_ben_disicon&medium=link">Getting Started</a> guide.</p>
					]]></property>
					<property name="content_type">text/xml</property>
				</widget>
				<widget class="SwatFormField">
					<property name="title" translatable="yes">Top of Page</property>
					<widget class="SwatTextarea" id="blorg_ad_top">
						<property name="maxlength" type="integer">1024</property>
						<property name="rows" type="integer">11</property>
					</widget>
				</widget>
				<widget class="SwatFormField">
					<property name="title" translatable="yes">Bottom of Page</property>
					<widget class="SwatTextarea" id="blorg_ad_bottom">
						<property name="maxlength" type="integer">1024</property>
						<property name="rows" type="integer">11</property>
					</widget>
				</widget>
				<widget class="SwatFormField">
					<property name="title" translatable="yes">After Post Bodytext</property>
					<widget class="SwatTextarea" id="blorg_ad_post_content">
						<property name="maxlength" type="integer">1024</property>
						<property name="rows" type="integer">11</property>
					</widget>
				</widget>
				<widget class="SwatFormField">
					<property name="title" translatable="yes">Before Post Comments</property>
					<widget class="SwatTextarea" id="blorg_ad_post_comments">
						<property name="maxlength" type="integer">1024</property>
						<property name="rows" type="integer">11</property>
					</widget>
				</widget>
			</widget>
			<widget class="SwatFooterFormField">
				<widget class="SwatButton" id="submit_button">
					<property name="title" translatable="yes">Save Preferences</property>
				</widget>
			</widget>
		</widget>
	</widget>
</swatml>
