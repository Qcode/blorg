<?xml version="1.0" standalone="no"?>
<!DOCTYPE swatml SYSTEM "http://swat.silverorange.com/swatml1.dtd">
<swatml>
	<widget class="SwatMessageDisplay" id="message_display" />
	<widget class="SwatFrame" id="edit_frame">
		<property name="title" translatable="yes">Reply</property>
		<widget class="SwatForm" id="edit_form">
			<widget class="SwatFormField" id="fullname_field">
				<property name="title" translatable="yes">Fullname</property>
				<widget class="SwatEntry" id="fullname">
					<property name="maxlength" type="integer">255</property>
				</widget>
			</widget>
			<widget class="SwatFormField" id="link_field">
				<property name="title" translatable="yes">Link</property>
				<widget class="SwatEntry" id="link">
					<property name="maxlength" type="integer">255</property>
				</widget>
			</widget>
			<widget class="SwatFormField" id="email_field">
				<property name="title" translatable="yes">Email</property>
				<widget class="SwatEmailEntry" id="email">
					<property name="maxlength" type="integer">255</property>
				</widget>
			</widget>
			<widget class="SwatFormField">
				<property name="title" translatable="yes">Bodytext</property>
				<widget class="SwatTextarea" id="bodytext">
					<property name="required" type="boolean">true</property>
					<property name="rows" type="integer">8</property>
				</widget>
			</widget>
			<widget class="SwatFormField">
				<property name="title" translatable="yes">Show on Site?</property>
				<widget class="SwatCheckbox" id="show">
					<property name="value" type="boolean">true</property>
				</widget>
			</widget>
			<widget class="SwatFormField" id="approved_field">
				<property name="title" translatable="yes">Approved?</property>
				<widget class="SwatCheckbox" id="approved" />
			</widget>
			<widget class="SwatFooterFormField">
				<widget class="SwatButton" id="submit_button" />
			</widget>
		</widget>
	</widget>
</swatml>
